{
  "name": "evos-browser",
  "version": "1.0.0",
  "description": "EVOS Browser - An AI-powered Chromium-based browser",
  "main": "src/main/main.js",
  "scripts": {
    "start": "cmd /c \"(set ELECTRON_RUN_AS_NODE=) && electron .\"",
    "dev": "cmd /c \"(set ELECTRON_RUN_AS_NODE=) && electron . --enable-logging\"",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:linux": "electron-builder --linux --x64",
    "build:win-linux": "electron-builder --win --linux --x64",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "convert-icon": "node scripts/convert-icon.js",
    "clean": "rmdir /s /q dist 2>nul || echo Clean complete"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AhirTech1/evos-browser.git"
  },
  "keywords": [
    "browser",
    "electron",
    "chromium",
    "ai",
    "agent"
  ],
  "author": "AhirTech1",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "node-llama-cpp": "^3.0.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.evos.browser",
    "productName": "EVOS Browser",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/*.map",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}"
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "installerHeaderIcon": "assets/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EVOS Browser"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/icon.png",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.png",
      "category": "Network;WebBrowser"
    }
  }
}
